<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/room.css" />
    <link rel="stylesheet" href="/styles/modal.css" />

    <script src="/scripts/main.js" defer type="module"></script>

    <title>Perguntas e Respostas - Rocket.Q</title>
  </head>
  <body>
    <div id="room" class="content">
      <header>
        <a href="/">
          <img src="/images/logo.svg" alt="Logo Rocket.Q" />
        </a>

        <div class="buttons">
          <div class="button outlined" id="room-id" data-id="<%= roomId  %>">
            #<%= roomId %>
            <img src="/images/icon-copy.svg" alt="Copiar Número da Sala" />
          </div>
          <a href="/create-pass" class="button">
            <img src="/images/icon-users-white.svg" alt="Criar Sala" />
            Criar Sala
          </a>
        </div>
      </header>

      <main>
        <section id="question-form">
          <h2>Faça sua pergunta</h2>
          <form action="/question/create/<%= roomId %> " method="POST">
            <label class="sr-only" for="question"
              >O que você quer perguntar ?</label
            >
            <textarea
              placeholder="O que você quer perguntar ?"
              name="question"
              id="question"
            ></textarea>

            <footer>
              <div>
                <img src="/images/icon-lock.svg" alt="Cadeado" />
                <span>Esta pergunta é anônima.</span>
              </div>
              <button>Enviar</button>
            </footer>
          </form>
        </section>

        <section id="questions">
          <h2 class="sr-only">Perguntas da Comunidade:</h2>

          <div class="questions-wrapper">
            <% if(existNoQuestions){ %>
              
              <%- include("parts/noquestion") %>
              
            <% } %>
            <% questions.forEach(question => { %>

            <div class="question-wrapper">
              <div class="question-content">
                <div class="user">
                  <img src="/images/avatar.svg" alt="Imagem Avatar" />
                </div>
                <div class="question">
                  <p><%= question.question %></p>
                </div>
              </div>
              <div class="actions">
                <a href="#" class="check" data-id="<%= question.id %>">
                  <img src="/images/icon-check.svg" alt="Marcar como lida" />
                  Marcar como lida </a
                ><a href="#" class="delete" data-id="<%= question.id %>">
                  <img src="/images/icon-trash.svg" alt="Excluir" />
                  Excluir
                </a>
              </div>
            </div>

            <%}); %> <% questionsReaded.forEach(question => { %>

            <div class="question-wrapper readed">
              <div class="question-content">
                <div class="user">
                  <img src="/images/avatar.svg" alt="Imagem Avatar" />
                </div>
                <div class="question"><p><%= question.question %></p></div>
              </div>
              <div class="actions">
                <a href="#" class="delete" data-id="<%= question.id %>">
                  <img src="/images/icon-trash.svg" alt="Excluir" />
                  Excluir
                </a>
              </div>
            </div>

            <%}); %>
          </div>
        </section>
      </main>
    </div>

    <!-- Modal -->

    <div class="modal-wrapper">
      <div class="modal">
        <h2>Excluir Pergunta</h2>
        <p>Tem certeza que você deseja excluir esta pergunta ?</p>

        <form action="#" method="POST">
          <label class="sr-only" for="password">Digite sua senha :</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Digite sua senha"
          />

          <div class="buttons">
            <div class="button gray cancel">Cancelar</div>
            <button class="red">Sim, excluir</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
